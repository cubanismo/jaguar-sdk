#====================================================================
#       Macro & Assembler flags
#====================================================================

STADDR = 802000
MACFLAGS = -fb -g
ALNFLAGS = -w -v -v -e -rd -g -l -a $(STADDR) x 4000

#====================================================================
#       Default Rules
#====================================================================
.SUFFIXES:      .o .s

.s.o:
	mac $(MACFLAGS) $<

#====================================================================
#       EXECUTABLES
#====================================================================

OBJ = startup.o testrgb.o test.o
 
testrgb.cof: $(OBJ)
	aln $(ALNFLAGS) -o testrgb.cof $(OBJ)

#############################################################################

startup.o: startup.s \jaguar\source\sample.rgb

